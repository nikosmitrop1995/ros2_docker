{
    "name": "microbot",
    // "initializeCommand": "if test -f ${localWorkspaceFolder}/docker/.container_id; then rm ${localWorkspaceFolder}/docker/.container_id; fi",
    // build from a dockerfile
    // first clone the repository that contains the Dockerfile
    // "build": {
    //      "dockerfile": "../docker/Dockerfile"
    // },
    // Pull the image from Dockerhub
    "image": "nikosmitrop1995/microbot:latest",
    "overrideCommand": true,
    "workspaceFolder": "/home/microbot",
    "runArgs": [
        "--name",
        "microbot",
        "--workdir",
        "/home/microbot",
        // For having UI working through Docker !
        "-v",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        "-e",
        "DISPLAY",
        // For macOS
        // "-e", "DISPLAY=host.docker.internal:0",
        // ROS environment variables
        // "-e",
        // "ROS_MASTER_URI=http://localhost:11311",
        // "-e",
        // "ROS_IP=127.0.0.1",
        // for GPU and network sharing
        "--privileged",
        // give access to the host computer network (internet also!)
        "--network",
        "host",
        "--ipc",
        "host",
        // give access to your personnal zsh history from within the docker container
        "-v",
        "${localEnv:HOME}/.zsh_history:/home/microbot/.zsh_history",
        // mount the ros docker workspace inside docker
        // "-v",
        // "${localWorkspaceFolder}/docker_workspace/:/home/microbot/workspace",
        // Make your ssh keys accessible from within docker to commit / push
        "-v",
        "${localEnv:HOME}/.ssh:/home/microbot/.ssh/",
        // make your global git config accessible from within docker
        // also please make sure you set your global git username and email for clear
        // git history
        "-v",
        "${localEnv:HOME}/.gitconfig:/home/microbot/.gitconfig",
        // all devices (joysticks...)
        "-v",
        "/dev/input:/dev/input:rw",
        // GPU, make sure you installed nvidia-container-runtime.
        // disable on macOS
        // "--gpus",
        // "all",
        // output the container id to a file for your to join it
        // "--cidfile",
        // "${localWorkspaceFolder}/docker/.container_id"
        // remove the container when we quit 
        // "--rm"
    ]
}